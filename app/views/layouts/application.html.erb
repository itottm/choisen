<header class="str-header">
<%=	render 'shared/header' %>
</header>
<main class="str-main">
<% if flash.notice %>
<p class="notice"><%= flash.notice %></p>
<% end %>
<%= yield %>
</main>
<footer class="str-footer">
<%=	render 'shared/footer' %>
</footer>
</body>
</html>