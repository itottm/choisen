<% @page_title = '質問新規登録' %>

<h1><%= @page_title %></h1>

<%= form_for @poll, url:{action: 'confirm'} do |form| %>
  <ul class="list-input-poll" id="pollInputList">
    <li>
      <%= form.label :title, '質問タイトル' %>
      <%= form.text_field :title %>
    </li>
    <li>
      <%= form.label :question, '質問詳細' %>
      <%= form.text_field :question %>
    </li>
    <li class="choicesItem">
      <label for="choicesItem1">選択肢1</label>
      <input type="text" id="choicesItem1" class="choicesItemInput">
    </li>
    <li class="choicesItem">
      <label for="choicesItem2">選択肢2</label>
      <input type="text" id="choicesItem2" class="choicesItemInput">
    </li>
    <li>
      <%= form.label :limit, '期限' %>
      <%= form.select :limit, options_for_select(%w(15分 30分 1時間 3時間 6時間 12時間 24時間)) %>
    </li>
  </ul>
  <%= form.hidden_field :choices , id: 'choices_text' %>
  <p><%= form.submit '確認画面へ' %></p>
<% end %>
