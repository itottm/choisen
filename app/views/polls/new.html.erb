<% @page_title = '質問新規登録' %>

<h1><%= @page_title %></h1>

<%= form_for @poll do |form| %>
  <%#= render 'form', form: form %>
  <table class="tbl_poll">
    <tr>
      <th><%= form.label :title, '質問タイトル' %></th>
      <td><%= form.text_field :title %></td>
    </tr>
    <tr>
      <th><%= form.label :question, '質問詳細' %></th>
      <td><%= form.text_field :question %></td>
    </tr>
    <tr>
      <th><label for="choicesItem1">選択肢1</label></th>
      <td><input type="text" id="choicesItem1" class="choicesItem"></td>
    </tr>
    <tr>
      <th><label for="choicesItem2">選択肢2</label></th>
      <td><input type="text" id="choicesItem2" class="choicesItem"></td>
    </tr>
  </table>
  <%= form.hidden_field :choices , id: 'choices_text' %>
  <p><%= form.submit %></p>
<% end %>

