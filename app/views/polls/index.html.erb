<% @page_title = '質問一覧' %>

<h1><%= @page_title %></h1>

<% if @polls.present? %>
  <% @polls.each do |poll| %>
    <p>質問タイトル：<%= poll.title %><br>
      質問内容：<%= poll.question %><br>
      選択肢：<%= poll.answer %>
    </p>
  <% end %>
<% else %>
  <p>現在質問がありません。</p>
<% end %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script>
  $(function(){
    'use strict';

    $('.box').on('click', function(){
      $('.box').removeClass('selected');
      $(this).addClass('selected');
      $('#answer').val($(this).data('id'));
    });

    $('#btn').on('click',function(){
      if($('#answer').val() === ''){
        alert('Choose One!');
      }else{
        $('form').submit();
      }
    });

    $('.error').fadeOut(3000);
  })
</script>